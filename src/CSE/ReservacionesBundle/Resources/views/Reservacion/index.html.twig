{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reservacion list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Cantpersonas</th>
                <th>Fechaingreso</th>
                <th>Fechasalida</th>
                <th>Totalreservacion</th>
                <th>Subtotalservicios</th>
                <th>Subtotalactividades</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('reservacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.cantPersonas }}</td>
                <td>{% if entity.fechaIngreso %}{{ entity.fechaIngreso|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaSalida %}{{ entity.fechaSalida|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.totalReservacion }}</td>
                <td>{{ entity.subtotalServicios }}</td>
                <td>{{ entity.subtotalActividades }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('reservacion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('reservacion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('reservacion_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
