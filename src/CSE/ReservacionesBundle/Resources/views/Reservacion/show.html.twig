        <h2>Reservaci√≥n</h2>
        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Codigo</th>
                    <td>{{ entity.codigo }}</td>
                </tr>
                <tr>
                    <th>Cantpersonas</th>
